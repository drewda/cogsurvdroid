<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
>



	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		android:padding="0dip"
	>
		<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/estimates_feedback"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:background="@color/purple_end"
			android:padding="5dip"
		>
			<TextView
				android:id="@+id/message"
				android:text="Great guess! Here's another."
				android:textColor="@color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dip"
				android:textAppearance="@android:style/TextAppearance.Small" />
		</RelativeLayout>

		<TextView
			android:layout_height="wrap_content"
			android:text="Please estimate distance and direction to:"
			android:layout_width="fill_parent"
			android:gravity="center" android:padding="5dip"/>
		<TextView
			android:id="@+id/target_landmark_header"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textSize="28sp"
			android:text="__"
			android:layout_width="fill_parent" />
		<!--
			<TextView android:id="@+id/target_landmark_city"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:textSize="20sp" android:layout_marginBottom="8dip"
			android:gravity="center" android:text="__" />
		-->
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="Use the +/- buttons to enter distance." android:padding="5dip"/>
		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dip"
		>
			<TableRow>
				<Button
					android:text="+"
					android:id="@+id/distance_whole_number_plus_button" />
				<TextView
					android:text="" />
				<Button
					android:text="+"
					android:id="@+id/distance_tenth_number_plus_button" />
			</TableRow>
			<TableRow>
				<EditText
					android:id="@+id/distance_whole_number_edit_text"
					android:text="0"
					android:layout_width="80dip"
					android:gravity="right"
					android:inputType="none"
					android:editable="false" />
				<TextView
					android:text="." />
				<EditText
					android:id="@+id/distance_tenth_number_edit_text"
					android:text="0"
					android:layout_width="50dip"
					android:gravity="left"
					android:inputType="none"
					android:editable="false" />
				<Spinner
					android:id="@+id/distance_units_spinner"
					android:layout_width="wrap_content" />
			</TableRow>
			<TableRow>
				<Button
					android:text="-"
					android:id="@+id/distance_whole_number_minus_button" />
				<TextView
					android:text="" />
				<Button
					android:text="-"
					android:id="@+id/distance_tenth_number_minus_button" />
			</TableRow>
		</TableLayout>
		<TextView
			android:layout_height="wrap_content"
			android:text="Estimate the direction to the target by pointing your phone."
			android:gravity="center_horizontal"
			android:layout_width="200dp"
			android:layout_marginBottom="8dip"
			android:layout_gravity="center" />
		<Button
			android:id="@+id/record_estimates_button"
			android:text="I'm Pointing. Record It Now!"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="18sp" />
	</LinearLayout>

</ScrollView>